@using bikeRental.Core.Enums;
@model bikeRental.Application.Models.Bicycle.BicycleModel

@{
	ViewData["Title"] = "Create";
}

<div class="container mx-4 pt-2">
	<div class="row justify-content-center">
		<div class="col-md-4">
			<h1>Create</h1>
			<h4>bicycle</h4>
			<hr />
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Station.Id" />
				<input type="hidden" asp-for="Station.Address"/>
				<input type="hidden" asp-for="Station.lattitude"/>
				<input type="hidden" asp-for="Station.longitude"/>
				<div class="form-group">
					<select asp-for="Type" class="form-control"
							asp-items="@(Html.GetEnumSelectList<BikeType>())">
					</select>
					<label asp-for="Type"></label>

				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" min="0.01" required/>
                   
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-group">
                <select asp-for="Status" class="form-control" 
                    asp-items="@(Html.GetEnumSelectList<BikeStatus>())">
                </select>
                <label asp-for="Status"></label>

                </div>
				<div class="form-group mt-3">
					<input type="submit" value="Create" class="btn btn-primary" />
					<a class="btn btn-light" asp-controller="Bicycles" asp-action="@ViewData["cname"]" asp-route-id="@Model.Station.Id">Back to Full List</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

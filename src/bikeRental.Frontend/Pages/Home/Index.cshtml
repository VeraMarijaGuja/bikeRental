
@model IEnumerable<bikeRental.Application.Models.Station.StationResponse>
@{
    ViewData["Title"] = "Station";
}


<div class="text-center">
    <h1 class="display-4">Welcome to our Bike Rental Service </h1>
    <p style="font-family: 'Poppins', sans-serif;">Rent a bike and explore the city in a fun and eco-friendly way.</p>
    <p>Whether you're a local or tourist, our bike rental service<br>offers a convenient and affordable way to get around.</p>
    <p>Discover the sights, visit local attractions, and enjoy<br>the freedom of biking at your own pace.</p>
</div>

<div id="accordion">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-outline-secondary" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <i class="bi bi-house"> Stations</i>
        </button>
      </h5>
    </div>
    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
          <table>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                    </tr>
                }                    
            </table>
      </div>
    </div>
  </div>
